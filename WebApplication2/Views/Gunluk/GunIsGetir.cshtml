@model WebApplication2.Models.GunlukIsTBL
@{
    ViewData["Title"] = "GunIsGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!DOCTYPE html>
<html>
<title>GünlükGuncelle</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<body>
    <br />
    <br />
    <br />
    @using (Html.BeginForm("GunlukIsGuncelle", "Gunluk", FormMethod.Post))
    {
        <input type="hidden" name="GunlukID" value="@Model.GunlukID" />
        <h2 class="w3-center">Günlük İş Güncelle</h2>

       

        <div class="w3-row w3-section">
            <div><label>Günlük İş Ekleyen Kullanıcı</label></div>
            <div class="w3-rest">
                @Html.DropDownListFor(x => x.KullaniciTBL.KullaniciID, (List<SelectListItem>)ViewBag.kuldgr, "Kullanıcı Seçiniz", new { @class = "form-control" })
            </div>
        </div>

        <div class="w3-row w3-section">
            <div><label>Günlük İş</label></div>
            <div class="w3-rest">
                @Html.TextBoxFor(x => x.IsBasligi, new { @class = "form-control" })
            </div>
        </div>

        <div class="w3-row w3-section">
            <div><label>Günlük İşin İçeriği</label></div>
            <div class="w3-rest">
                @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
            </div>
        </div>


        <div class="w3-row w3-section">
            <div><label>İşin Başlangıç Tarihi</label></div>
            <div class="w3-rest">
                <input type="date" class="form-control" name="BaslamaTarihi"  />

            </div>
        </div>

        <div class="w3-row w3-section">
            <div><label>İşin Bitiş Tarihi</label></div>
            <div class="w3-rest">
                <input type="text" class="form-control" name="BitisTarihi" value="@DateTime.Now.ToShortDateString()"/>

            </div>
        </div>





        <button class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding">Güncelle</button>



    }



</body>
</html>

